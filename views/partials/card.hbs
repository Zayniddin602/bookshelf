<section style="padding-top: 7em;">
  <div class="card mb-3" style="max-width: 1040px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{data.image}}" class="img-fluid rounded" alt="..." />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{data.name}}</h5>
          <p class="card-text">{{data.about}}</p>
          <p class="card-text"><small
              class="text-muted"
            >{{data.author}}</small></p>
        </div>
      </div>
    </div>
  </div>
</section>